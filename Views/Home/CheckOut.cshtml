@model List <ShoppingWebsite.Models.Product>

@{
    ViewBag.Title = "CheckOut";
}

<div class="container" style="min-height:550px;">
    <div class="row">
        <center>

            @{
                double bill = 0;
                
                if(Model != null  )
                { 
                    foreach (var product in Model)
                    {
                        bill += product.Price;
                    }

                    HttpContext.Current.Session["Products"] = null;
                    
                    if (bill == 0)
                    {
                        <h1>
                            Your Cart is Empty
                        </h1>
                    }
                    else
                    {
                        <h1>
                            Your bill is $ @bill
                        </h1>
                    }
                }
                else
                {
                    <h1>
                        Your Cart is Empty
                    </h1>
                }

}

        </center>
    </div>

</div>
